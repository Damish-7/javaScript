let mode="orange";
let color;

if (mode==="dark"){
    color="black";
} else if(mode=="blue"){
    color="blue";
} else {
    color="pink";
}

console.log(color);


let num=prompt("enter a numbr");

if(num%5===0){
    console.log(num,"is multiple of 5");
} else {
    console.log(num,"is not multiple of 5");
}


let score=prompt("enter your score");
let grade;


if(score>=90 && score<=100){
    grade="A";
} else if (score>=70 && score <=89){
    grade="B";
} else if(score >60 && score <=69){
    grade="C";
} else if(score>=50 && score<=59){
    grade="D";
} else if(score >=0 && score <=49){
    grade="F";
} 
console.log("accordibg to score was: ", grade );
