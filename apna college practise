// arithmetic operators

let a=3;
let b=5;

console.log("a=",a, "& b=",b)
console.log("a+b=",a+b);
console.log("a-b=",a-b);
console.log("a*b=",a*b);
console.log("a/b=",a/b);
console.log("a%b=",a%b);
console.log("a**b=",a**b); 

//unary operator

let a=5;
let b=2;

console.log("a=",a, "&b=",b,);
  
console.log(++a); 

//assignment operators

let a=5;
let b=2;

a **= 4;     // a=a-4
console.log("a =",a);

//comparison operator

let a=5;
let b=3;

console.log("a<b",  a>=b); 

//logical

let a=6;
let b=5;


console.log("cond1 && cond2 =" ,!(a<b));

//conditional statement

let age =18;

if (age>=18){
    console.log("you can vote");
}

if(age<18){
    console.log("you cannot vote");
}

