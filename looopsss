<h2>Loops></h2>
<p id="demo"></p>

<script>
const cars=["BMW","AUDI","BENZ","TESLA","MG","FORD"];

let text="";
for(let i=0;i<cars.length;i++){
 text += cars[i]+ "<br>";
}

document.getElementById("demo").innerHTML=text;
</script>
</body>
